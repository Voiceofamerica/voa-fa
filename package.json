{
  "name": "com.voanews.voafa",
  "displayName": "VOAFarsi",
  "version": "1.0.0",
  "description": "Voice of America Mobile for Farsi Audiences",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start:web": "NODE_ENV='host' webpack-dev-server --hot",
    "start:ios": "run-s build:webpack run:ios",
    "prestart:android": "./scripts/avd.js --wait",
    "start:android": "run-s build:webpack run:android",
    "run:android": "cordova run android",
    "run:ios": "cordova run ios",
    "generate": "run-p generate:splash generate:icon",
    "generate:splash": "cordova-splash",
    "generate:icon": "cordova-icon",
    "check": "run-s -c lint test",
    "test": "jest --config jest.json",
    "lint": "tslint --project .",
    "build": "run-s build:webpack build:cordova",
    "build:webpack": "webpack",
    "build:cordova": "cordova build",
    "build:clean": "rimraf plugins && rimraf platforms",
    "build:full": "run-s -c prepare prepare prepare copy:assets build",
    "copy:assets": "run-p copy:assets:*",
    "copy:assets:ios": "rsync -rv ./assets/ios/Images.xcassets/ ./platforms/ios/VOAFarsi/Images.xcassets/",
    "copy:assets:android": "rsync -rv ./assets/android/res/ ./platforms/android/res/",
    "scss:types": "tcm -p './src/{components,containers,routes}/**/*.scss'",
    "scss:types:watch": "npm run scss:types -- -w",
    "prepare": "cordova prepare",
    "gql:types": "apollo-codegen generate src/**/*.graphql --schema node_modules/@voiceofamerica/voa-core-shared/introspect/schema.json --target typescript --output src/helpers/graphql-types.d.ts"
  },
  "author": "Voice of America",
  "license": "MIT",
  "dependencies": {
    "@types/cordova": "0.0.34",
    "@types/cordova-plugin-device": "^1.1.5",
    "@types/cordova-plugin-x-socialsharing": "^5.1.1",
    "@types/graphql": "^0.11.6",
    "@types/history": "^4.6.1",
    "@types/lodash": "^4.14.88",
    "@types/moment": "^2.13.0",
    "@types/react": "^16.0.18",
    "@types/react-dnd": "^2.0.34",
    "@types/react-dnd-touch-backend": "^0.3.2",
    "@types/react-dom": "^16.0.2",
    "@types/react-redux": "^5.0.10",
    "@types/react-router": "^4.0.16",
    "@types/react-router-redux": "^5.0.10",
    "@types/react-slick": "^0.15.0",
    "@types/redux": "^3.6.0",
    "@types/redux-persist": "^4.3.1",
    "@types/redux-thunk": "^2.1.0",
    "@types/webpack-env": "^1.13.2",
    "@voiceofamerica/voa-core-shared": "^1.48.0",
    "@voiceofamerica/voa-shared": "^1.14.53",
    "adobe-mobile-services": "^4.13.1-cor",
    "android-versions": "^1.2.1",
    "apollo-cache-inmemory": "^1.1.1",
    "apollo-client": "^2.0.3",
    "apollo-codegen": "^0.17.2",
    "apollo-link-http": "^1.2.0",
    "awesome-typescript-loader": "^3.2.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "copy-webpack-plugin": "^4.2.0",
    "cordova": "^8.0.0",
    "cordova-android": "^6.3.0",
    "cordova-ios": "^4.5.4",
    "cordova-pdf-generator": "^1.9.3",
    "cordova-plugin-add-swift-support": "^1.7.1",
    "cordova-plugin-badge": "^0.8.7",
    "cordova-plugin-crosswalk-webview": "^2.3.0",
    "cordova-plugin-device": "^2.0.1",
    "cordova-plugin-fullscreen": "^1.2.0",
    "cordova-plugin-local-notification": "^0.9.0-beta.1",
    "cordova-plugin-splashscreen": "^4.0.3",
    "cordova-plugin-whitelist": "^1.3.2",
    "cordova-plugin-x-socialsharing": "^5.2.1",
    "cordova-wheel-selector-plugin": "^1.0.9",
    "css-loader": "^0.28.7",
    "es6-promise-plugin": "^4.1.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "history": "^4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "ionic-plugin-keyboard": "^2.2.1",
    "jest": "^21.2.1",
    "json-loader": "^0.5.7",
