    "mdi": "^2.0.46",
    "moment": "^2.19.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "psiphon-cordova-plugin": "^0.6.1",
    "react": "^16.2.0",
    "react-apollo": "^2.0.1",
    "react-dnd": "^2.5.4",
    "react-dnd-touch-backend": "^0.3.17",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.1.1",
    "react-redux": "^5.0.6",
    "react-refresher": "^1.0.7",
    "react-router": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.8",
    "react-slick": "^0.16.0",
    "redux": "^3.7.2",
    "redux-persist": "^4.10.2",
    "redux-thunk": "^2.2.0",
    "resolve-url-loader": "^2.1.1",
    "rxjs": "^5.5.2",
    "sass-loader": "^6.0.6",
    "shallow-compare": "^1.2.2",
    "slick-carousel": "^1.8.1",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^6.0.1",
    "typed-css-modules": "^0.3.0",
    "typescript": "^2.5.3",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1"
  },
  "cordova": {
    "platforms": [
      "android",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-splashscreen": {},
      "cordova-wheel-selector-plugin": {},
      "adobe-mobile-services": {},
      "psiphon-cordova-plugin": {},
      "cordova-plugin-fullscreen": {},
      "ionic-plugin-keyboard": {},
      "cordova-plugin-crosswalk-webview": {
        "XWALK_VERSION": "23+",
        "XWALK_LITEVERSION": "xwalk_core_library_canary:17+",
        "XWALK_COMMANDLINE": "--disable-pull-to-refresh-effect",
        "XWALK_MODE": "embedded",
        "XWALK_MULTIPLEAPK": "false"
      },
      "cordova-plugin-x-socialsharing": {},
      "cordova-pdf-generator": {},
      "cordova-plugin-add-swift-support": {},
      "cordova-plugin-local-notification": {},
      "cordova-plugin-device": {}
    }
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.4.0",
    "chalk": "^2.3.0",
    "cordova-icon": "^0.11.0",
    "cordova-splash": "^0.10.0",
    "ios-sim": "^6.1.2",
    "rimraf": "^2.6.2",
    "simple-terminal-menu": "^1.1.3",
    "through2": "^2.0.3",
    "webpack-dev-server": "^2.9.3",
    "webpack-graphql-loader": "0.0.16",
    "yargs": "^10.0.3"
  },
  "optionalDependencies": {
    "ios-deploy": "^1.9.2"
  }
}